{
  "manifest_version": 3,
  "name": "JobFiltr - Ghost Job & Staffing Filter",
  "version": "1.0.0",
  "description": "Filter out ghost jobs, staffing firms, and customize your job search experience on LinkedIn and Indeed",
  "permissions": ["storage", "activeTab", "tabs", "alarms"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.indeed.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background/serviceWorker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://*.indeed.com/*"
      ],
      "js": ["src/content/index.ts"],
      "css": ["src/content/content.css"],
      "run_at": "document_idle"
    }
  ]
}
