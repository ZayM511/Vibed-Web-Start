{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/user/Vibed-Web-Start"
      ],
      "description": "Enhanced file operations and directory access"
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "Direct GitHub API access for repositories, issues, and PRs"
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "Web search capabilities via Brave Search API"
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://localhost/vibed"
      ],
      "description": "PostgreSQL database operations"
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "description": "Browser automation and web scraping with Puppeteer"
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@executeautomation/playwright-mcp-server"
      ],
      "description": "Browser automation with Playwright for testing and scraping"
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "-y",
        "@jpisnice/shadcn-ui-mcp-server"
      ],
      "description": "Access to shadcn/ui component documentation and code examples"
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "description": "Up-to-date library documentation and code examples"
    },
    "figma": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-figma"
      ],
      "env": {
        "FIGMA_PERSONAL_ACCESS_TOKEN": "${FIGMA_TOKEN}"
      },
      "description": "Figma design file access and integration"
    },
    "perplexity": {
      "command": "npx",
      "args": [
        "-y",
        "perplexity-mcp-server"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      },
      "description": "AI-powered search and research using Perplexity API"
    },
    "time": {
      "command": "npx",
      "args": [
        "-y",
        "@theo.foobar/mcp-time"
      ],
      "description": "Time and date operations with natural language parsing and timezone conversion"
    },
    "vscode": {
      "command": "npx",
      "args": [
        "-y",
        "vscode-mcp-server"
      ],
      "description": "VS Code workspace integration and editing features"
    }
  }
}
