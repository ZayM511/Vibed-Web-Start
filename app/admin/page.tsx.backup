"use client";

import { useState } from "react";
import { useAction, useMutation } from "convex/react";
import { api } from "@/convex/_generated/api";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { HeaderNav } from "@/components/HeaderNav";
import { Loader2, CheckCircle, XCircle } from "lucide-react";

export default function AdminPage() {
  const [isGenerating, setIsGenerating] = useState(false);
  const [result, setResult] = useState<any>(null);
  const [error, setError] = useState<string | null>(null);
  const [testResult, setTestResult] = useState<any>(null);

  const generateSampleJobs = useAction(api.dataCollection.generateSampleJobs);
  const insertTestJob = useMutation(api.trainingData.insertTestJob);

  const handleInsertTest = async () => {
    try {
      setTestResult(null);
      const response = await insertTestJob({});
      setTestResult({ success: true, message: "Test job inserted!", id: response.id });
    } catch (err) {
      setTestResult({ success: false, error: String(err) });
    }
  };

  const handleGenerate = async (count: number) => {
    setIsGenerating(true);
    setError(null);
    setResult(null);

    try {
      const response = await generateSampleJobs({
        count,
        includeScams: true,
        includeLegit: true,
      });
      setResult(response);
    } catch (err) {
      setError(String(err));
    } finally {
      setIsGenerating(false);
    }
  };

  return (
    <>
      <HeaderNav />
      <div className="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 pt-20 px-4">
        <div className="container mx-auto max-w-4xl">
          <div className="mb-8">
            <h1 className="text-4xl font-bold text-white mb-2">Admin Panel</h1>
            <p className="text-white/60">Generate sample training data for Phase 2</p>
          </div>

          <div className="grid gap-6">
            {/* Debug: Insert Test Job Card */}
            <Card className="bg-yellow-500/10 border-yellow-500/30">
              <CardHeader>
                <CardTitle className="text-yellow-300">üêõ Debug: Insert Test Job</CardTitle>
                <CardDescription className="text-yellow-200/60">
                  Bypass ML pipeline and insert a test job directly into database
                </CardDescription>
              </CardHeader>
              <CardContent className="space-y-4">
                <Button
                  onClick={handleInsertTest}
                  className="bg-yellow-600 hover:bg-yellow-700"
                >
                  Insert Test Job
                </Button>

                {testResult && (
                  <div className={`flex items-start gap-3 p-4 rounded-lg ${testResult.success ? 'bg-green-500/10 border border-green-500/20' : 'bg-red-500/10 border border-red-500/20'}`}>
                    {testResult.success ? (
                      <>
                        <CheckCircle className="h-5 w-5 text-green-400 flex-shrink-0 mt-0.5" />
                        <div>
                          <p className="text-green-400 font-semibold">{testResult.message}</p>
                          <p className="text-green-400/80 text-sm mt-1">ID: {testResult.id}</p>
                          <p className="text-green-400/80 text-sm mt-2">Now go to Dashboard ‚Üí Labeling tab to see if it appears!</p>
                        </div>
                      </>
                    ) : (
                      <>
                        <XCircle className="h-5 w-5 text-red-400 flex-shrink-0 mt-0.5" />
                        <p className="text-red-400">{testResult.error}</p>
                      </>
                    )}
                  </div>
                )}
              </CardContent>
            </Card>

            {/* Generate Sample Jobs Card */}
            <Card className="bg-white/10 border-white/20">
              <CardHeader>
                <CardTitle className="text-white">Generate Sample Jobs</CardTitle>
                <CardDescription className="text-white/60">
                  Create sample job postings (mix of scams and legitimate jobs) for testing the labeling interface
                </CardDescription>
              </CardHeader>
              <CardContent className="space-y-4">
                <div className="flex gap-4 flex-wrap">
                  <Button
                    onClick={() => handleGenerate(5)}
                    disabled={isGenerating}
                    className="bg-indigo-600 hover:bg-indigo-700"
                  >
                    {isGenerating && <Loader2 className="mr-2 h-4 w-4 animate-spin" />}
                    Generate 5 Jobs
                  </Button>
                  <Button
                    onClick={() => handleGenerate(10)}
                    disabled={isGenerating}
                    className="bg-purple-600 hover:bg-purple-700"
                  >
                    {isGenerating && <Loader2 className="mr-2 h-4 w-4 animate-spin" />}
                    Generate 10 Jobs
                  </Button>
                  <Button
                    onClick={() => handleGenerate(20)}
                    disabled={isGenerating}
                    className="bg-pink-600 hover:bg-pink-700"
                  >
                    {isGenerating && <Loader2 className="mr-2 h-4 w-4 animate-spin" />}
                    Generate 20 Jobs
                  </Button>
                </div>

                {isGenerating && (
                  <div className="flex items-center gap-3 p-4 bg-blue-500/10 border border-blue-500/20 rounded-lg">
                    <Loader2 className="h-5 w-5 text-blue-400 animate-spin" />
                    <p className="text-blue-400">Generating sample jobs and scanning them...</p>
                  </div>
                )}

                {error && (
                  <div className="flex items-start gap-3 p-4 bg-red-500/10 border border-red-500/20 rounded-lg">
                    <XCircle className="h-5 w-5 text-red-400 flex-shrink-0 mt-0.5" />
                    <div>
                      <p className="text-red-400 font-semibold">Error occurred:</p>
                      <p className="text-red-400/80 text-sm mt-1">{error}</p>
                    </div>
                  </div>
                )}

                {result && (
                  <div className="space-y-3">
                    <div className="flex items-start gap-3 p-4 bg-green-500/10 border border-green-500/20 rounded-lg">
                      <CheckCircle className="h-5 w-5 text-green-400 flex-shrink-0 mt-0.5" />
                      <div>
                        <p className="text-green-400 font-semibold">Success!</p>
                        <p className="text-green-400/80 text-sm mt-1">{result.message}</p>
                        <p className="text-green-400/80 text-sm">Generated {result.generated} jobs</p>
                      </div>
                    </div>

                    {result.results && result.results.length > 0 && (
                      <div className="bg-white/5 border border-white/10 rounded-lg p-4 max-h-96 overflow-y-auto">
                        <h3 className="text-white font-semibold mb-3">Generated Jobs:</h3>
                        <div className="space-y-2">
                          {result.results.map((job: any, idx: number) => (
                            <div
                              key={idx}
                              className="flex items-center justify-between p-3 bg-white/5 rounded-lg"
                            >
                              <div>
                                <p className="text-white font-medium">{job.jobTitle}</p>
                                <p className="text-white/60 text-sm">{job.company}</p>
                              </div>
                              <div className="flex items-center gap-3">
                                {job.created ? (
                                  <>
                                    <span
                                      className={`px-2 py-1 rounded text-xs ${
                                        job.isScam
                                          ? "bg-red-500/20 text-red-400"
                                          : "bg-green-500/20 text-green-400"
                                      }`}
                                    >
                                      {job.isScam ? "Scam" : "Legit"}
                                    </span>
                                    {job.confidence !== undefined && (
                                      <span className="text-white/60 text-sm">
                                        {Math.round(job.confidence)}% confidence
                                      </span>
                                    )}
                                  </>
                                ) : (
                                  <span className="text-red-400 text-xs">{job.error}</span>
                                )}
                              </div>
                            </div>
                          ))}
                        </div>
                      </div>
                    )}

                    <Button
                      onClick={() => (window.location.href = "/dashboard")}
                      className="w-full bg-gradient-to-r from-indigo-500 to-purple-500"
                    >
                      Go to Dashboard ‚Üí Labeling Tab
                    </Button>
                  </div>
                )}
              </CardContent>
            </Card>

            {/* Instructions Card */}
            <Card className="bg-white/10 border-white/20">
              <CardHeader>
                <CardTitle className="text-white">How to Use</CardTitle>
              </CardHeader>
              <CardContent>
                <ol className="space-y-2 text-white/80">
                  <li className="flex gap-2">
                    <span className="text-indigo-400 font-bold">1.</span>
                    Click one of the "Generate" buttons above
                  </li>
                  <li className="flex gap-2">
                    <span className="text-indigo-400 font-bold">2.</span>
                    Wait for the jobs to be generated and scanned (~1-2 seconds per job)
                  </li>
                  <li className="flex gap-2">
                    <span className="text-indigo-400 font-bold">3.</span>
                    Go to Dashboard ‚Üí Labeling tab to start labeling
                  </li>
                  <li className="flex gap-2">
                    <span className="text-indigo-400 font-bold">4.</span>
                    Label each job as Scam/Legitimate and Ghost Job/Real
                  </li>
                  <li className="flex gap-2">
                    <span className="text-indigo-400 font-bold">5.</span>
                    Repeat until you have 1,000+ labeled examples for Phase 2
                  </li>
                </ol>
              </CardContent>
            </Card>
          </div>
        </div>
      </div>
    </>
  );
}
